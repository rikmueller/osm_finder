# AlongGPX CLI Configuration
# Copy this file to .env and customize for your local environment

# Project Settings
ALONGGPX_PROJECT_NAME=MyProject
ALONGGPX_OUTPUT_PATH=../data/output/
ALONGGPX_TIMEZONE=Europe/Berlin

# Search Settings
ALONGGPX_RADIUS_KM=5
ALONGGPX_STEP_KM=3

# Overpass API Settings
ALONGGPX_BATCH_KM=50
ALONGGPX_OVERPASS_RETRIES=3

# Optional: Override GPX file path (useful for testing)
# ALONGGPX_GPX_FILE=../data/input/track.gpx
